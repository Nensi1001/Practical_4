<%- include('../layouts/header.ejs') %>
    <h1>Edit Customer</h1>
    <form action="" method="post"  width="50%">
        <input type="hidden" name="id" id="uid" value="<%= user.id %>">
        <label>Name:</label>
        <input type="text" name="cname" placeholder="Enter Name" value="<%= user.cname %>" required />
        <br><br>
        <label>Email:</label>
        <input type="email" name="email" id="email" placeholder="Enter Email" value="<%= user.email %>" required />
        <br><br>
        <label>Phone Number:</label>
        <input type="number" name="phone" value="<%= user.phone %>" required />
        <br><br>
        <label>Date of Birth:</label>
        <input type="date" name="dob"value="<%= user.dob %>" required />
        <br><br>
        <input type="submit" value="Update Customer" />
    </form>



    <% include('../layouts/footer.ejs') %>