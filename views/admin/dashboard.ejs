<%- include('../layouts/header.ejs') %>
    <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> -->
    <h3>Dashboard</h3>

    <button class="edit"><a href="/admin/new-user">Add User</a></button>
    <button class="edit"><a href="/admin/export-user">Exports User into PDF</a></button>
    <button class="edit"><a href="/customer/custlist">Customer List</a></button>
    <button class="edit"><a href="/service/servicelist">Service List</a></button>

    <br><br>

    <form action="">
        <input type="text" placeholder="Search User name,email" name="search">
        <button class="edit">Search</button>
    </form>
    <br>
    <table class="table" border="1" cellspacing="0">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        <% if(users && users.length> 0){
            for(let i=0;i<users.length;i++){ %>
                <tr>
                    <td>
                        <%= users[i].name %>
                    </td>
                    <td>
                        <%= users[i].email%>
                    </td>
                    <td>
                        <%= users[i].phone %>
                    </td>
                    <td>
                        <%= users[i].dob %>
                    </td>
                    <td><img src="/Images/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px"
                            height="100px"></td>
                    <td><a href="/admin/edit-user?id=<%= users[i]._id%>" class="button primary edit"><i
                                class="fa fa-pencil-square" aria-hidden="true" style="color: black; font-size: 30px;"></i>
                        </a>
                        <a href="/admin/delete-user?id=<%= users[i]._id%>"><i class="fa fa-trash"
                                aria-hidden="true" style="color: red; font-size: 30px;"></i>
                        </a>
                    </td>
                </tr>
                <% } } else{ %>
                    <tr>
                        <td colspan="6">Users Not found</td>
                    </tr>
                    <% } %>

    </table>
    <br>
    <button class="left"><a href="?page=<%= previous %>"><i class="fa fa-arrow-left"
                aria-hidden="true"></i></a></button>



    <% for(let j=1;j<=totalPages;j++){ %>
        <a class="pagenumber" href="?page=<%= j %>">
            <%= j %>
        </a>
        <% } %>

            <button class="right"><a href="?page=<%= next %>"><i class="fa fa-arrow-right"
                        aria-hidden="true"></i></button>
            </a>

            <h3><a href="/admin/home">Home</a></h3>
            <% include('../layouts/footer.ejs') %>